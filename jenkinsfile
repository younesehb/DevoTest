pipeline {
    agent any
    
       tools {
        maven 'maven_3_6_0'
       
    }
    stages {
          stage('Checkout from git') {
        steps {
            git branch: 'master',
                url: 'https://github.com/younesehb/DevoTest.git'

            sh "ls -lat"
        }
    }
        stage ('Clean compile') {
            steps{
                    sh 'mvn clean compile'
                
            }
            
        }
        
        stage ('Testing') {
            steps {
             
                    sh 'mvn test'
                
            }        
        }
         stage ('Packaging Stage') {
            steps {
               
                    sh 'mvn package'
                   
                
            }   
        }
        stage (' Running Stage') {
            steps {
               
              
                    sh 'java -jar target/demo-0.0.1-SNAPSHOT.jar'
                
            }   
        }
    }
    
    
}